{
  "name": "paradigma",
  "version": "1.0.0",
  "description": "This is my test project for paradigma.",
  "main": "gulpfile.js",
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "gulp css",
    "start": "gulp start"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.{sass,scss}"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Alexander-Lusto/test_work_paradigma.git"
  },
  "author": "Alexander Lusto",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Alexander-Lusto/test_work_paradigma/issues"
  },
  "homepage": "https://github.com/Alexander-Lusto/test_work_paradigma#readme",
  "dependencies": {
    "@htmlacademy/editorconfig-cli": "^1.0.0",
    "autoprefixer": "^9.8.4",
    "browser-sync": "^2.26.7",
    "gulp": "^4.0.2",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-sourcemaps": "^2.6.5",
    "stylelint": "^13.6.1",
    "stylelint-config-htmlacademy": "^0.1.4"
  }
}
